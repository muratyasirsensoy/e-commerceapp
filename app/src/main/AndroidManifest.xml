<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- İnternet izni -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:targetApi="31">

    <!-- Aktiviteler -->
    <activity
        android:name=".view.ProfileActivity"
        android:exported="false" />
    <activity
        android:name=".view.AddressInputActivity"
        android:exported="false" />
    <activity
        android:name=".view.PaymentDetailsActivity"
        android:exported="false" />
    <activity
        android:name=".view.AllProductListActivity"
        android:exported="false" />
    <activity
        android:name=".view.CategoryActivity"
        android:exported="false" />
    <activity
        android:name=".view.FavoriteActivity"
        android:exported="false" />
    <activity
        android:name=".view.CartActivity"
        android:exported="false" />
    <activity
        android:name=".view.DetailsActivity"
        android:exported="false" />
    <activity
        android:name=".view.HomeActivity"
        android:exported="false" />

    <!-- MainActivity: Başlangıç aktivitesi -->
    <activity
        android:name=".view.MainActivity"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- Google Ads için meta-data -->
    <meta-data
        android:name="com.google.android.gms.ads.APPLICATION_ID"
        android:value="ca-app-pub-3940256099942544~3347511713" /> <!-- Test App ID -->

</application>

    </manifest>
